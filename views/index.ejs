<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chess Master - Home</title>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap");

      /* RESET + BASE */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html,
      body {
        width: 100%;
        height: 100%;
        overflow: hidden; /* prevent any scroll */
      }

      body {
        font-family: "Inter", sans-serif;
        background: #000;
        color: #fff;
        position: relative;
      }

      /* === BACKGROUND EFFECTS === */
      .bg-pattern {
        position: fixed;
        inset: 0;
        background: radial-gradient(
            circle at 30% 20%,
            rgba(14, 165, 233, 0.15),
            transparent 40%
          ),
          radial-gradient(
            circle at 70% 80%,
            rgba(34, 211, 238, 0.1),
            transparent 40%
          ),
          radial-gradient(
            circle at 50% 50%,
            rgba(6, 182, 212, 0.05),
            transparent 50%
          );
        z-index: 0;
        animation: gradientShift 15s ease infinite;
      }

      @keyframes gradientShift {
        0%,
        100% {
          opacity: 1;
        }
        50% {
          opacity: 0.8;
        }
      }

      .bg-grid {
        position: fixed;
        inset: 0;
        background-image: linear-gradient(
            rgba(14, 165, 233, 0.03) 1px,
            transparent 1px
          ),
          linear-gradient(90deg, rgba(14, 165, 233, 0.03) 1px, transparent 1px);
        background-size: 60px 60px;
        z-index: 0;
        animation: gridMove 30s linear infinite;
      }

      @keyframes gridMove {
        0% {
          transform: translate(0, 0);
        }
        100% {
          transform: translate(60px, 60px);
        }
      }

      .particle {
        position: fixed;
        width: 4px;
        height: 4px;
        background: rgba(14, 165, 233, 0.3);
        border-radius: 50%;
        pointer-events: none;
        z-index: 0;
        animation: float 20s linear infinite;
      }

      @keyframes float {
        0% {
          transform: translateY(100vh) translateX(0);
          opacity: 0;
        }
        10% {
          opacity: 1;
        }
        90% {
          opacity: 1;
        }
        100% {
          transform: translateY(-100px) translateX(100px);
          opacity: 0;
        }
      }

      /* === MAIN LAYOUT === */
      .container {
        position: relative;
        z-index: 1;
        height: 100vh;
        width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
      }

      .hero {
        text-align: center;
        width: 100%;
        max-width: 600px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center; /* Center everything vertically */
        gap: 1.5rem; /* space between items */
        height: 100%;
        animation: fadeInUp 1s ease-out;
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* === TEXT === */
      .logo {
        font-size: clamp(2.5rem, 6vw, 5rem);
        font-weight: 800;
        background: linear-gradient(135deg, #ffffff, #0ea5e9, #22d3ee);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -2px;
        text-transform: uppercase;
        text-shadow: 0 0 80px rgba(14, 165, 233, 0.5);
      }

      .logo-icon {
        font-size: clamp(3rem, 8vw, 6rem);
        display: block;
      }

      .tagline {
        font-size: clamp(0.9rem, 2vw, 1.3rem);
        color: #94a3b8;
        font-weight: 400;
        margin-top: 0.5rem;
      }

      /* === CHESSBOARD PREVIEW === */
      .board-preview-container {
        display: flex;
        align-items: center;
        justify-content: center;
        perspective: 1200px;
        width: 100%;
        max-width: 420px;
        aspect-ratio: 1; /* maintain square */
        flex-shrink: 0; /* don’t let it shrink */
      }

      .chessboard-preview {
        display: grid;
        grid-template-columns: repeat(8, 1fr);
        aspect-ratio: 1;
        width: 100%;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 0 40px rgba(14, 165, 233, 0.3),
          0 10px 40px rgba(0, 0, 0, 0.5);
        transform: rotateX(25deg) rotateZ(-5deg);
      }

      .square {
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: clamp(1rem, 3vw, 2rem);
      }

      .square.light {
        background: #1a1a1a;
      }
      .square.dark {
        background: #0a0a0a;
      }

      /* === CTA BUTTON === */
      .cta-container {
        margin-top: 1rem;
      }

      .play-btn {
        padding: 1rem 3rem;
        font-size: clamp(1rem, 2.5vw, 1.3rem);
        font-weight: 700;
        color: #fff;
        background: linear-gradient(135deg, #0ea5e9, #22d3ee);
        border: none;
        border-radius: 50px;
        cursor: pointer;
        transition: all 0.4s ease;
        box-shadow: 0 0 30px rgba(14, 165, 233, 0.4);
        letter-spacing: 1px;
      }

      .play-btn:hover {
        transform: scale(1.05);
        box-shadow: 0 0 50px rgba(14, 165, 233, 0.6);
      }

      /* === MODAL === */
      .modal-backdrop {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(10px);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 999;
      }

      .modal {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 0 40px rgba(14, 165, 233, 0.4);
        animation: popUp 0.4s ease forwards;
        max-width: 400px;
        width: 90%;
      }

      @keyframes popUp {
        from {
          opacity: 0;
          transform: scale(0.8);
        }
        to {
          opacity: 1;
          transform: scale(1);
        }
      }

      .modal h2 {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        background: linear-gradient(90deg, #0ea5e9, #22d3ee);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .option-btn {
        display: block;
        width: 100%;
        margin: 0.5rem 0;
        padding: 1rem;
        border: none;
        border-radius: 12px;
        background: linear-gradient(90deg, #084f70, #02414c);
        color: #fff;
        font-weight: 600;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .option-btn:hover {
        transform: scale(1.03);
        background: linear-gradient(90deg, #0b7008, #077f07);
      }

      .close-btn {
        margin-top: 1rem;
        background: rgba(255, 255, 255, 0.1);
        color: #94a3b8;
      }

      .close-btn:hover {
        background: rgba(255, 255, 255, 0.2);
        color: #fff;
      }

      /* === RESPONSIVE FINE-TUNING === */
      @media (max-height: 700px) {
        .hero {
          height: 85vh;
        }
        .chessboard-preview {
          max-width: 320px;
        }
        .logo {
          font-size: 2.5rem;
        }
      }

      @media (max-width: 480px) {
        /* .hero {
          height: 90vh;
        } */
        .chessboard-preview {
          max-width: 280px;
        }
        .tagline {
          font-size: 0.9rem;
        }
        .board-preview-container {
          margin-top: -45px;
        }
        .cta-container {
          /* background-color: red; */
          margin-top: -50px;
        }
        .play-btn {
          padding: 0.8rem 2rem;
        }
      }

      @media (max-width: 749px) {
        .logo {
          margin-top: 0px;
          font-size: 2rem;
        }

        .board-preview-container {
          margin-top: -65px;
        }

        .cta-container {
          margin-top: -35px;
        }
      }

      @media (min-width: 1200px) {
        .chessboard-preview {
          max-width: 480px;
        }
      }

      @media (min-width: 750px) {
        .logo {
          margin-top: 0px;
          font-size: 2rem;
          margin-top: -22px;
        }
        .tagline{
          /* background-color: red; */
          margin-top: -15px;
          font-size: 1rem;
        }

        .logo-icon {
          font-size: clamp(2rem, 2vw, 2rem);
          display: block;
        }

        .board-preview-container {
          /* margin-top: -65px; */
          width: auto;
        }

        .cta-container {
          margin-top: -3px;
        }
      }

      
    </style>
  </head>

  <body>
    <div class="bg-pattern"></div>
    <div class="bg-grid"></div>

    <div class="container">
      <div class="hero">
        <div class="logo">
          <span class="logo-icon">♔</span>
          Chess Master
        </div>

        <p class="tagline">
          Unleash your strategy. Outsmart your opponent. Dominate the board.
        </p>

        <div class="board-preview-container">
          <div class="chessboard-preview" id="preview-board"></div>
        </div>

        <div class="cta-container">
          <button class="play-btn" id="open-modal">Play Now</button>
        </div>
      </div>
    </div>

    <!-- ✅ MODAL -->
    <div class="modal-backdrop" id="game-modal">
      <div class="modal">
        <h2>Select Game Mode</h2>
        <button class="option-btn" onclick="window.location.href='/game'">
          🕹 Play Online
        </button>
        <button
          class="option-btn"
          onclick="window.location.href='/game-friend'"
        >
          👥 Play with Friend
        </button>
        <button class="option-btn" onclick="window.location.href='/game-ai'">
          🤖 Play with Computer
        </button>
        <button class="option-btn close-btn" id="close-modal">Cancel</button>
      </div>
    </div>

    <script>
      // Chessboard preview
      const initialBoard = [
        ["♜", "♞", "♝", "♛", "♚", "♝", "♞", "♜"],
        ["♟", "♟", "♟", "♟", "♟", "♟", "♟", "♟"],
        ["", "", "", "", "", "", "", ""],
        ["", "", "", "", "", "", "", ""],
        ["", "", "", "", "", "", "", ""],
        ["", "", "", "", "", "", "", ""],
        ["♙", "♙", "♙", "♙", "♙", "♙", "♙", "♙"],
        ["♖", "♘", "♗", "♕", "♔", "♗", "♘", "♖"],
      ];

      const previewBoard = document.getElementById("preview-board");
      for (let r = 0; r < 8; r++) {
        for (let c = 0; c < 8; c++) {
          const sq = document.createElement("div");
          sq.className = `square ${(r + c) % 2 === 0 ? "light" : "dark"}`;
          sq.textContent = initialBoard[r][c];
          previewBoard.appendChild(sq);
        }
      }

      // Particles
      for (let i = 0; i < 20; i++) {
        const p = document.createElement("div");
        p.className = "particle";
        p.style.left = Math.random() * 100 + "%";
        p.style.animationDelay = Math.random() * 20 + "s";
        p.style.animationDuration = 15 + Math.random() * 10 + "s";
        document.body.appendChild(p);
      }

      // Modal logic
      const modal = document.getElementById("game-modal");
      const openBtn = document.getElementById("open-modal");
      const closeBtn = document.getElementById("close-modal");

      openBtn.addEventListener("click", () => (modal.style.display = "flex"));
      closeBtn.addEventListener("click", () => (modal.style.display = "none"));
      window.addEventListener("click", (e) => {
        if (e.target === modal) modal.style.display = "none";
      });
    </script>
  </body>
</html>
