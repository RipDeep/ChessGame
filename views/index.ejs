<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/style.css">
  <style>
    /* Global Styles */
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 0;
      background: linear-gradient(135deg, #f0f0f0 0%, #c0c0c0 100%);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    /* Home Container */
    .home-container {
      text-align: center;
      background: rgba(255, 255, 255, 0.9);
      padding: 60px 80px;
      border-radius: 20px;
      box-shadow: 0 20px 40px rgba(0,0,0,0.2);
      animation: fadeIn 1s ease-in-out;
    }

    .home-container h1 {
      font-size: 48px;
      color: #333;
      margin-bottom: 40px;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    /* Play Button */
    .play-btn {
      padding: 15px 50px;
      font-size: 24px;
      font-weight: bold;
      background: linear-gradient(90deg, #4ade80, #22c55e);
      color: #fff;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      transition: transform 0.2s, box-shadow 0.2s;
      box-shadow: 0 8px 15px rgba(0,0,0,0.2);
      margin-top: 25px;
    }

    .play-btn:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 25px rgba(0,0,0,0.3);
    }

    /* Chessboard Preview */
    .chessboard-preview {
      display: grid;
      grid-template-columns: repeat(8, 40px);
      grid-template-rows: repeat(8, 40px);
      margin: 30px auto 0;
      border: 2px solid #333;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }

    .square {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
    }

    .light { background: #f0d9b5; }
    .dark { background: #b58863; color: white; }

    /* Animations */
    @keyframes fadeIn {
      0% { opacity: 0; transform: translateY(-20px);}
      100% { opacity: 1; transform: translateY(0);}
    }
  </style>
</head>
<body>
  <div class="home-container">
    <h1>Chess Game</h1>
    
    <!-- Optional Chessboard Preview -->
    <div class="chessboard-preview" id="preview-board"></div>

    <a href="/game"><button class="play-btn">Play Now</button></a>
  </div>

  <script>
    // Chessboard Preview
    const previewBoard = document.getElementById('preview-board');
    const rows = 8, cols = 8;
    for (let r = 0; r < rows; r++) {
      for (let c = 0; c < cols; c++) {
        const square = document.createElement('div');
        square.classList.add('square');
        if ((r + c) % 2 === 0) square.classList.add('light');
        else square.classList.add('dark');
        previewBoard.appendChild(square);
      }
    }
  </script>
</body>
</html>
